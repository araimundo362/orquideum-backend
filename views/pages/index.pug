html
    head
        meta(charset="UTF-8")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
        title Formularios

    body
        div.container
        h1.text-center.mt-5.mb-5.fw-bolder.text-decoration-underline.text-info INGRESE LOS DATOS

form.form-control.container(action="/api/productos/guardar" method='POST')
    .row
    .col
        input#title.form-control(type='text' name='title' placeholder="Producto")
    .col
        input#price.form-control(type='number' name='price' placeholder="Precio")
    .col
        input#thumbnail.form-control(type='text' name='thumbnail' placeholder="thumbnail")
    button.btn.btn-outline-info.mt-3.mb-5.d-grid.gap-2.col-4.mx-auto(type='submit') Enviar


table.table.table-striped.table-hover.container.mt-5
    thead
    tr
        th #
        th Producto
        th Precio
        th Imagen
    tbody
        each n in object
            tr
                th= n.id
                th= n.title
                th= n.price
                th= n.thumbnail
        else
            th.text-danger.text-center No hay datos cargados