<h2 class="text-center mt-5 mb-5 fw-bolder text-decoration-underline text-info">TABLA DE PRODUCTOS</h1>

    <% if (productos.length > 0) { %>
    <table class="table table-striped table-hover container mt-5">
        <thead>
            <tr>
                <th>#</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach((item) => { %>
            <tr>
                <th> <%= item.id %> </th>
                <th> <%= item.title %> </th>
                <th> <%= item.price %> </th>
                <th> <%= item.thumbnail %> </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
    <% } else { %>
    <h4 class="text-center mt-5 mb-5 fw-bolder text-danger">No se encontraron resultados</h4>
    <% } %> 